{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Dull-meshi API",
    "description": "Dull-meshi API"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Health Check",
        "description": "Returns 'Hello, World!' to indicate the service is running.",
        "responses": {
          "200": {
            "description": "Service is running",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Hello, world!"
                }
              }
            }
          }
        }
      }
    },
    "/api/elasticsearch/health": {
      "get": {
        "summary": "Elasticsearch Health Check",
        "description": "Checks the health of the Elasticsearch cluster.",
        "responses": {
          "200": {
            "description": "Elasticsearch is up!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ElasticsearchHealth"
                }
              }
            }
          },
          "500": {
            "description": "Elasticsearch is down",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "description": "Error message",
            "type": "string"
          }
        }
      },
      "ElasticsearchHealth": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "epoch": {
              "type": "string"
            },
            "timestamp": {
              "type": "string"
            },
            "cluster": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "node.total": {
              "type": "string"
            },
            "node.data": {
              "type": "string"
            },
            "shards": {
              "type": "string"
            },
            "pri": {
              "type": "string"
            },
            "relo": {
              "type": "string"
            },
            "init": {
              "type": "string"
            },
            "unassign": {
              "type": "string"
            },
            "pending_tasks": {
              "type": "string"
            },
            "max_task_wait_time": {
              "type": "string"
            },
            "active_shards_percent": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
